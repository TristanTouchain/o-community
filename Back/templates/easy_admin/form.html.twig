{% use 'bootstrap_4_layout.html.twig' %}

{% block datetime_widget -%}
    {%- if widget == 'single_text' -%}
        {{- block('form_widget_simple') -}}
    {%- else -%}
        {% set attr = attr|merge({class: (attr.class|default('') ~ ' form-inline')|trim}) -%}
        
        <div class="form-row">
        
                {{- form_errors(form.date) -}}
                {{- form_errors(form.time) -}}

                <div class="sr-only">
                    {%- if form.date.day is defined %}{{ form_label(form.date.day) }}{% endif -%}
                    {%- if form.date.month is defined %}{{ form_label(form.date.month) }}{% endif -%}
                    {%- if form.date.year is defined %}{{ form_label(form.date.year) }}{% endif -%}
                </div>
                <div class="form-group col-md-4">
                    {{- form_label(form.date.day) -}}
                    {{- form_widget(form.date.day) -}}
                </div>
                <div class="form-group col-md-4">
                    {{- form_label(form.date.month) -}}
                    {{- form_widget(form.date.month) -}}
                </div>
                <div class="form-group col-md-4">
                    {{- form_label(form.date.year) -}}
                    {{- form_widget(form.date.year) -}}
                </div>

        </div>
    {%- endif -%}
{%- endblock datetime_widget %}

{% block date_widget -%}
    {%- if widget == 'single_text' -%}
        {{- block('form_widget_simple') -}}
    {%- else -%}
        {%- set attr = attr|merge({class: (attr.class|default('') ~ ' form-inline')|trim}) -%}
        {%- if datetime is not defined or not datetime -%}
            <div {{ block('widget_container_attributes') -}}>
        {%- endif %}
        {%- if label is not same as(false) -%}
            <div class="sr-only">
                {{ form_label(form.day) }}
                {{ form_label(form.month) }}
                {{ form_label(form.year) }}
               
            </div>
        {%- endif -%}

            {{- date_pattern|replace({
                '{{ day }}': form_widget(form.day),
                '{{ month }}': form_widget(form.month),
                '{{ year }}': form_widget(form.year),   
            })|raw -}}
        {%- if datetime is not defined or not datetime -%}
            </div>
        {%- endif -%}
    {%- endif -%}
{%- endblock date_widget %}
