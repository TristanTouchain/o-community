{% extends 'base.html.twig' %}

{% block title %}AppUser{% endblock %}

{% block body %}
    <div class="container-fluid container_table_list">
        <h2 class="show-title">Profil de {{ app_user.firstname }} {{ app_user.lastname }}</h2>

        <a class="btn btn-light" href="{{ path('app_user_index') }}">Retour Ã  la liste</a>
        <a class="btn btn-success" href="{{ path('app_user_edit', {'id': app_user.id}) }}">edit</a>
        {{ include('admin/app_user/_delete_form.html.twig') }}

        <table class="table table-striped table_list">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ app_user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ app_user.email }}</td>
                </tr>
                <tr>
                    <th>Firstname</th>
                    <td>{{ app_user.firstname }}</td>
                </tr>
                <tr>
                    <th>Lastname</th>
                    <td>{{ app_user.lastname }}</td>
                </tr>
                <tr>
                    <th>Birthdate</th>
                    <td>{{ app_user.birthdate ? app_user.birthdate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>ProfilePicture</th>
                    <td><img class="image_for_list" src="{{ app_user.profilePicture }}" alt=""></td>
                </tr>
                <tr>
                    <th>PhoneNumber</th>
                    <td>{{ app_user.phoneNumber }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ app_user.city }}</td>
                </tr>
                <tr>
                    <th>Zipcode</th>
                    <td>{{ app_user.zipcode }}</td>
                </tr>
                <tr>
                    <th>LinkLinkedin</th>
                    <td>{{ app_user.linkLinkedin }}</td>
                </tr>
                <tr>
                    <th>LinkGithub</th>
                    <td>{{ app_user.linkGithub }}</td>
                </tr>
                <tr>
                    <th>LinkPersonal</th>
                    <td>{{ app_user.linkPersonal }}</td>
                </tr>
                <tr>
                    <th>IsActive</th>
                    <td>{{ app_user.isActive ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>CreatedDate</th>
                    <td>{{ app_user.createdDate ? app_user.createdDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ app_user.description }}</td>
                </tr>
            </tbody>
        </table>
    </div>

{% endblock %}
