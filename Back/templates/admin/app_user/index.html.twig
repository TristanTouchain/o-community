{% extends 'base.html.twig' %}

{% block title %}Liste des membres - Admin{% endblock %}

{% block body %}
    <div class="container-fluid container_table_list">
        <h2 class="title-category" >Liste des utilisateurs</h2>
        <a href="{{ path('app_user_new') }}" class="add-element"><i class="fas fa-plus"></i> Ajouter un utilisateur</a>
        <table class="table table-striped table_list">
         
            <thead>
                <tr>
                    <th {% if pagination.isSorted('id') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Id', 'id') }}</th>
                    <th {% if pagination.isSorted('email') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Email', 'email') }}</th>
                    <!--<th>Password</th>-->
                    <th {% if pagination.isSorted('firstname') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Prénom', 'firstname') }}</th>
                    <th {% if pagination.isSorted('lastname') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Nom', 'lastname') }}</th>
                    <th {% if pagination.isSorted('birthDate') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Date de naissance', 'birthDate') }}</th>
                    <th>Photo de profil</th>
                    <th>Numéro de tél.</th>
                    <th {% if pagination.isSorted('city') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Ville', 'city') }}</th>
                    <th {% if pagination.isSorted('zipcode') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Code postal', 'zipcode') }}</th>
                    <!--<th>LinkLinkedin</th>-->
                    <!--<th>LinkGithub</th>-->
                    <!--<th>LinkPersonal</th>-->
                    <th {% if pagination.isSorted('isactive') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Actif', 'isactive') }}</th>
                    <th {% if pagination.isSorted('createdDate') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Date de création', 'createdDate') }}</th>
                    <!--<th>Description</th>-->
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for app_user in pagination %}
                <tr>
                    <td>{{ app_user.id }}</td>
                    <td>{{ app_user.email }}</td>
                     <!--<td>{{ app_user.password }}</td>-->
                    <td>{{ app_user.firstname }}</td>
                    <td>{{ app_user.lastname }}</td>
                    <td>{{ app_user.birthdate ? app_user.birthdate|date('d-m-Y') : '' }}</td>
                    <td><img class="image_for_list" src="{{ app_user.profilePicture }}" alt="" data-toggle="modal" data-target="#modal-{{ app_user.id }}"></td>

                        <!-- Modal -->
                        <div class="modal fade" id="modal-{{ app_user.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-body d-flex justify-content-center">
                                        <img src="{{ app_user.profilePicture }}" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>

                    <td>{{ app_user.phoneNumber }}</td>
                    <td>{{ app_user.city }}</td>
                    <td>{{ app_user.zipcode }}</td>
                    <!--<td>{{ app_user.linkLinkedin }}</td>-->
                    <!--<td>{{ app_user.linkGithub }}</td>-->
                    <!--<td>{{ app_user.linkPersonal }}</td>-->
                    <td>{{ app_user.isActive ? 'Oui' : 'Non' }}</td>
                    <td>{{ app_user.createdDate ? app_user.createdDate|date('d-m-Y') : '' }}</td>
                     <!--<td>{{ app_user.description }}</td>-->
                    <td>
                        <a class="btn btn-link  p-0"  data-toggle="tooltip" data-placement="top" title="afficher" href="{{ path('app_user_show', {'id': app_user.id}) }}"><i class="fas fa-search"></i></a>
                        <a class="btn btn-link  p-0"  data-toggle="tooltip" data-placement="top" title="modifier" href="{{ path('app_user_edit', {'id': app_user.id}) }}"><i class="fas fa-edit"></i></a>
                        {{ include('admin/app_user/_delete_link.html.twig') }}
                        {{ include('admin/app_user/_reset_password_link.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="17">Aucune donnée trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    
        {{ include('admin/partials/__pagination.html.twig') }}
    </div>

{% endblock %}
