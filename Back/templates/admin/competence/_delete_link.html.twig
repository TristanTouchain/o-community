<form class="d-inline" method="post" action="{{ path('competence_delete', {'id': competence.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ competence.id) }}">
    <button data-toggle="tooltip" data-placement="top" title="delete" class="btn btn-outline-primary"><i class="fas fa-trash-alt"></i></button>
</form>
