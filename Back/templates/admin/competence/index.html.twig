{% extends 'base.html.twig' %}

{% block title %}Liste des compétences - Admin{% endblock %}

{% block body %}
    <div class="container-fluid container_table_list">
        <h2 class="title-category" >Liste des compétences</h2>

        <table class="table table-striped table_list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Slug</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for competence in competences %}
                <tr>
                    <td>{{ competence.id }}</td>
                    <td>{{ competence.name }}</td>
                    <td>{{ competence.slug }}</td>
                    <td>
                        <a class="btn btn-link p-0"  data-toggle="tooltip" data-placement="top" title="show" href="{{ path('competence_show', {'id': competence.id}) }}"><i class="fas fa-search"></i></a>
                        <a class="btn btn-link p-0"  data-toggle="tooltip" data-placement="top" title="edit" href="{{ path('competence_edit', {'id': competence.id}) }}"><i class="fas fa-edit"></i></a>
                        {{ include('admin/competence/_delete_link.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('competence_new') }}">Create new</a>
    </div>
{% endblock %}
