{% extends 'base.html.twig' %}

{% block title %}Afficher un image - Admin{% endblock %}

{% block body %}
    <div class="container-fluid container_table_list">
        <h2 class="show-title">Image : </h2>

    <a class="btn btn-light" href="{{ path('image_index') }}">Retour Ã  la liste</a>
    <a class="btn btn-success" href="{{ path('image_edit', {'id': image.id}) }}">Modifier</a>
    {{ include('admin/image/_delete_form.html.twig') }}

    <table class="table table-striped table_list">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img class="image_for_list" src="{{ image.imageLink }}" alt="project_image" data-toggle="modal" data-target="#modal-{{ image.id }}"></td>

                        <!-- Modal -->
                        <div class="modal fade" id="modal-{{ image.id }}" tabindex="-1" role="dialog" aria-labelledby="view_picture" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-body d-flex justify-content-center">
                                        <img src="{{ image.imageLink }}" alt="project_image">
                                    </div>
                                </div>
                            </div>
                        </div>

            </tr>
            <tr>
                <th>Image de couverture</th>
                <td>{{ image.isHero ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Id du projet</th>
                <td>{{ image.project.id }}</td>
            </tr>
            <tr>
                <th>Nom du projet du projet</th>
                <td><a href="{{ path('project_show', {id: image.project.id}) }}">{{ image.project.name }}</a></td>
            </tr>
        </tbody>
    </table>

{% endblock %}
