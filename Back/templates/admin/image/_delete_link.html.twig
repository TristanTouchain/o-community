<form class="d-inline" method="post" action="{{ path('image_delete', {'id': image.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.id) }}">
    <button data-toggle="tooltip" data-placement="top" title="delete" class="btn btn-link p-0"><i class="fas fa-trash-alt"></i></button>
</form>
