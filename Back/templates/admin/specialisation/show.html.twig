{% extends 'base.html.twig' %}

{% block title %}Afficher une spécialisation - Admin{% endblock %}

{% block body %}
    <div class="container-fluid container_table_list">
        <h2 class="show-title">Spécialisation : {{ specialisation.name }}</h2>

        <a class="btn btn-light" href="{{ path('specialisation_index') }}">Retour à la liste</a>
        <a class="btn btn-success" href="{{ path('specialisation_edit', {'id': specialisation.id}) }}">Modifier</a>
        {{ include('admin/specialisation/_delete_form.html.twig') }}

        <table class="table table-striped table_list">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ specialisation.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ specialisation.name }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ specialisation.slug }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
