{% extends 'base.html.twig' %}

{% block title %}Liste des promotions - Admin{% endblock %}

{% block body %}
    <div class="container-fluid container_table_list">
        <h2 class="title-category" >Liste des promotions</h2>
        <a href="{{ path('promotion_new') }}" class="add-element"><i class="fas fa-plus"></i> Ajouter une promotion</a>

        <table class="table table-striped table_list">
            <thead>
                <tr>
                    <th {% if pagination.isSorted('id') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Id', 'id') }}</th>
                    <th {% if pagination.isSorted('name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Name', 'name') }}</th>
                    <!--<th>Slug</th>-->
                    <th {% if pagination.isSorted('startDate') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'StartDate', 'startDate') }}</th>
                    <th {% if pagination.isSorted('endDate') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'EndDate', 'endDate') }}</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for promotion in pagination %}
                <tr>
                    <td>{{ promotion.id }}</td>
                    <td>{{ promotion.name }}</td>
                    <!--<td>{{ promotion.slug }}</td>-->
                    <td>{{ promotion.startDate ? promotion.startDate|date('d-m-Y') : '' }}</td>
                    <td>{{ promotion.endDate ? promotion.endDate|date('d-m-Y') : '' }}</td>
                    <td>
                        <a class="btn btn-link  p-0"  data-toggle="tooltip" data-placement="top" title="show" href="{{ path('promotion_show', {'id': promotion.id}) }}"><i class="fas fa-search"></i></a>
                        <a class="btn btn-link  p-0"  data-toggle="tooltip" data-placement="top" title="edit" href="{{ path('promotion_edit', {'id': promotion.id}) }}"><i class="fas fa-edit"></i></a>
                        {{ include('admin/promotion/_delete_link.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('promotion_new') }}">Create new</a>

        {{ include('admin/partials/__pagination.html.twig') }}
    </div>
{% endblock %}
