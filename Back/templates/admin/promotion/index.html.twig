{% extends 'base.html.twig' %}

{% block title %}}Liste des promotions - Admin{% endblock %}

{% block body %}
    <div class="container-fluid container_table_list">
        <h2 class="title-category" >Liste des promotions</h2>

        <table class="table table-striped table_list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Slug</th>
                    <th>StartDate</th>
                    <th>EndDate</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for promotion in promotions %}
                <tr>
                    <td>{{ promotion.id }}</td>
                    <td>{{ promotion.name }}</td>
                    <td>{{ promotion.slug }}</td>
                    <td>{{ promotion.startDate ? promotion.startDate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ promotion.endDate ? promotion.endDate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a  data-toggle="tooltip" data-placement="top" title="show" href="{{ path('promotion_show', {'id': promotion.id}) }}"><i class="fas fa-search"></i></a>
                        <a  data-toggle="tooltip" data-placement="top" title="edit" href="{{ path('promotion_edit', {'id': promotion.id}) }}"><i class="fas fa-edit"></i></a>
                        <a class='delete-link' data-toggle="tooltip" data-placement="top" title="delete" href="{{ path('promotion_delete', {'id': promotion.id}) }}"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('promotion_new') }}">Create new</a>
    </div>
{% endblock %}
