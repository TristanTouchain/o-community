{% extends 'base.html.twig' %}

{% block title %}Promotion{% endblock %}

{% block body %}
    <div class="container-fluid container_table_list">
        <h2 class="show-title">Promotion : {{ promotion.name }}</h2>

        <a class="btn btn-light" href="{{ path('promotion_index') }}">back to list</a>
        <a class="btn btn-success" href="{{ path('promotion_edit', {'id': promotion.id}) }}">edit</a>
        {{ include('admin/promotion/_delete_form.html.twig') }}

        <table class="table table-striped table_list">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ promotion.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ promotion.name }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ promotion.slug }}</td>
                </tr>
                <tr>
                    <th>StartDate</th>
                    <td>{{ promotion.startDate ? promotion.startDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>EndDate</th>
                    <td>{{ promotion.endDate ? promotion.endDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
