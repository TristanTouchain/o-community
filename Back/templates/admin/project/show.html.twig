{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <div class="container-fluid container_table_list">
        <h2 class="show-title">Projet : {{ project.name }}</h2>

        <a class="btn btn-light" href="{{ path('project_index') }}">back to list</a>
        <a class="btn btn-success" href="{{ path('project_edit', {'id': project.id}) }}">edit</a>
        {{ include('admin/project/_delete_form.html.twig') }}

        <table class="table table-striped table_list">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ project.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ project.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ project.description }}</td>
                </tr>
                <tr>
                    <th>IsActive</th>
                    <td>{{ project.isActive ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>CreatedDate</th>
                    <td>{{ project.createdDate ? project.createdDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ project.slug }}</td>
                </tr>
                <tr>
                    <th>LinkProject</th>
                    <td>{{ project.linkProject }}</td>
                </tr>
                <tr>
                    <th>LinkVideo</th>
                    <td>{{ project.linkVideo }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
